{
  "name": "react-express-app",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "dependencies": {
    "eslint": "^5.4.0",
    "express": "^4.16.2",
    "nodemon": "^1.18.3"
  },
  "devDependencies": {
    "concurrently": "^3.5.0"
  }
}
