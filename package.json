{
  "name": "TrackCryptoMarkets",
  "main": "server.js",
  "version": "1.0.0",
  "engines": {
    "node": "9.5.0"
  },
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "test": "mocha --timeout 10000",
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.1",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "classnames": "^2.2.6",
    "cron": "^1.4.1",
    "dotenv": "^6.0.0",
    "express": "^4.16.2",
    "jsonwebtoken": "^8.3.0",
    "mocha": "^5.2.0",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.2",
    "npm": "^6.13.7",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pubnub": "^4.21.5",
    "react-number-format": "^3.6.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redis": "^2.8.0",
    "redux": "^4.0.5",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "twilio": "^3.19.2"
  },
  "devDependencies": {
    "chai-http": "^4.2.0",
    "concurrently": "^3.5.0",
    "request": "^2.88.0",
    "sinon": "^7.1.1"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "client/*"
    ]
  }
}